<div class="modal fade" id="<%= modalId %>" tabindex="-1" aria-labelledby="<%= modalId %>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="<%= modalId %>Label">Smart TODO</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div class="form-group mb-2">
          <div class="form-group mb-2">
            <input type="hidden" id="isUpdate"></input>

            <label for="#">What task would you like to complete? </label>
            <!--name attribute is important, it identifies data we are sending -->
            <input
              class="form-control taskName"
              type="text"
              name="tasks"
              placeholder="To Do"
              style="width: 430px; margin: 1em"
            />

            <label for="#">Task Description </label>
            <!--name attribute is important, it identifies data we are sending -->
            <textarea

              cols="20"
              wrap="hard"
              class="form-control taskDescription"
              type="text"
              name="description"
              placeholder="(optional)"
              style="width: 430px; margin: 1em"
            >
            </textarea>
            <!-- Category Dropdown Select -->

            <div class="category-dropdown">
              <label for="categories-select"><strong>Choose a Category: </strong></label>
              <select id="categories-select" name="category_id" data-current-category-id="#"></select>
            </div>

          </div>
        </div>

        </br>
        </br>

      <div class="modal-footer">
        <!-- Close / Cancel -->
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

        <!-- Save / Submit -->
        <button type="button" class="btn btn-primary submit-btn">Submit</button>
        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp

        <!-- Delete Task-->
        <button type="button" class="btn btn-danger delete-btn"
        data-bs-dismiss="modal">Delete Task</button>
      </div>
      </div>
    </div>
  </div>
</div>
