<!DOCTYPE html>
<html lang="en">

  <head>
    <title>Home Page</title>

    <meta charset="UTF-8" >
    <meta http-equiv="X-UA-Compatible" content="IE=edge" >
    <meta name="viewport" content="width=device-width, initial-scale=1.0" >

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/layout.css" />
    <!-- <link rel="stylesheet" href="/styles/main.css" /> -->

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <script src="/vendor/jquery-3.0.0.js"></script>

    <script defer src="/scripts/tasks/index.js"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="/" style="margin-left: 2rem; margin-right: 5rem;">Smart TODO List</a>
        <!-- Home Page button
        <div class="col-8 mt-4 mb-4 align-bottom"; style="color: white">
          <button class="btn btn-outline-info home-btn">Home</button>

        </div> -->

        <!-- Edit Profile -->
        <div class = "navbar-brand mt-4 mb-4 align-left edit-profile" style="margin-left: 55em;">
          Welcome,
          <a class="navbar-brand" data-bs-toggle="modal" data-bs-target="#userModalForm" data-user="<%= JSON.stringify(user) %>" href="/users/<%= user.id %>/edit"><%= user.first_name%> <%= user.last_name%>! &nbsp &nbsp <i style="color: gray;"><%= user.email%></i></a>
        </div>
        <!-- Injecting the user info -->
        <input type="hidden" value="<%= JSON.stringify(user) %>" id="currentUser"> </input>
      </nav>
    </header>

    <main style="margin: 2em;">
      <!-- Table of categories -->
      <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#taskModalForm">
        Add Task
      </button>
      </br>
      </br>
      </br>
      <div style="display: flex; flex-direction: row; justify-content: space-evenly;">
        <% categoryWithTasks.forEach((category) => { %>
          <div style="display: flex; flex-direction: column;">
            <ul class="list-group">
              <li class="list-group-item" style="background: inherit;"><strong class="text-center"><%= category.name %></strong></li>
              <% category.tasks.forEach((task) => { %>

                <% if(task.is_completed) { %>
                  <!-- Task is completed -->
                  <li class="list-group-item" style="background: inherit;">
                    <span><s><%= task.name %></s></span> &nbsp

                    <!-- Edit task -->
                    <button type="button" class="btn btn-outline-primary edit-btn" data-bs-toggle="modal" data-task="<%= JSON.stringify(task) %>" data-bs-target="#taskModalForm">
                      <i class="fa-regular fa-pen-to-square" style="color: #2f87ca;"></i>
                    </button>

                    <!-- Task is complete (Radio button) DONE / COMPLETE-->

                    <!-- Radio Button -->
                    <!-- <input class="form-check-input" type="radio" name="is_completed" id="is_completed">
                    <label class="task-done-label" for="is_completed">Done</label> -->

                    <!-- Checklist icon  -->
                    <!-- <i class="fa-regular fa-circle-check task-is-done"></i> -->

                <% } else { %>

                    <!-- Task not completed -->
                  <li class="list-group-item" style="background: inherit;">
                    <span><%= task.name %></span>

                    <!-- Edit task -->
                    <button type="button" class="btn btn-outline-primary edit-btn" data-bs-toggle="modal" data-task="<%= JSON.stringify(task) %>" data-bs-target="#taskModalForm">
                      <i class="fa-regular fa-pen-to-square" style="color: #2f87ca;"></i>
                    </button> &nbsp

                    <!-- Task is complete (Radio button) DONE / COMPLETE-->

                    <!-- Radio Button -->
                    <!-- <input class="form-check-input" type="radio" name="is_completed" id="is_completed">
                    <label class="task-done-label" for="is_completed">Done</label> -->

                    <!-- Checklist icon  -->
                    <i class="fa-regular fa-circle-check task-is-done"></i>


                <% } %>


              <% }) %>
            </ul>
          </div>
        <% }) %>
      </div>
    </main>
    <%- include('../users/_form', { modalId: 'userModalForm' }) %>
    <%- include('_form', { modalId: 'taskModalForm' }) %>
  </body>
</html>
